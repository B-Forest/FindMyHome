{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <section class="flex flex-col justify-center items-center">
        <h2 class="">Contact</h2>
        <p class="mb-4">Cette page contact est la pour que vous puisiez nous contacter que ce soit  pour un probl√®me, une recommandation, une question. </p>
        {% for message in app.flashes('success') %}
            <div class="text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">{{ message }}</div>
        {% endfor %}
        {{ form_start(form) }}
            {{ form_row(form.name, {'attr': {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'}}) }}
            {{ form_row(form.email, {'attr': {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'}}) }}
            {{ form_row(form.subject, {'attr': {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'}}) }}
            {{ form_row(form.text, {'attr': {'class': 'w-80 h-40 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'}})}}
        <div class="flex justify-center items-center">
        <button type="submit" class="text-white bg-valid font-medium rounded-lg text-sm px-16 py-6 text-center mr-2 mb-2">Envoyer</button>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
