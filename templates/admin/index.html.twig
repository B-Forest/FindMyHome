{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <section>
        <h2>Bienvenue dans l'interface admin</h2>
        <p class="mb-8">Vous pouvez gérer les durées disponibles , les catégories, les utilisateurs les biens et les visites </p>
        <div class="flex justify-center items-center">
            <button type="button"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
                <a href="{{ path('app_payment_index') }}" class="btn btn-primary">Gérer les durées disponibles</a>
            </button>
            <button type="button"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
                <a href="{{ path('app_category_index') }}" class="btn btn-primary">Gérer les catégories</a>
            </button>
            <button type="button"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
                <a href="{{ path('app_user_admin_index') }}" class="btn btn-primary">Gérer les utilisateurs</a>
            </button>
            <button type="button"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
                <a href="{{ path('app_property_admin_index') }}" class="btn btn-primary">Gérer les biens</a>
            </button>
            <button type="button"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
                <a href="{{ path('app_visit_admin_index') }}" class="btn btn-primary">Gérer les visites</a>
            </button>
        </div>
    </section>
{% endblock %}
