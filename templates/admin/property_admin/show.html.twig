{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <section>
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ property.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ property.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ property.price }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ property.surface }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ property.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ property.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ property.zipcode }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ property.Room }}</td>
            </tr>
        <tr>
            <th>Cat√©gorie</th>
            <td>{{ property.category.name }}</td>
        </tr>
            <tr>
            <th>Payment</th>
            <td>{{ property.payment.name }}</td>
        </tr>

        </tbody>
    </table>
        <h4 class="text-2xl">Photos :</h4>
        {% if property.pictures %}
        {% for picture in property.pictures %}
            <img src="{{ asset('uploads/property/' ~ picture.url) }}" alt="test" width="200">
            {{ include('admin/picture/_delete_form.html.twig') }}
        {% endfor %}
        {% endif %}

    <a href="{{ path('app_property_admin_index') }}">back to list</a>

    <a href="{{ path('app_property_admin_edit', {'id': property.id}) }}">edit</a>

    {{ include('admin/property_admin/_delete_form.html.twig') }}
    </section>
{% endblock %}
