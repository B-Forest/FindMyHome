{% extends 'admin/base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <section>
        <h2>Détail</h2>
        <div class=" flex justify-center items-center">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ property.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ property.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ property.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ property.price }}</td>
                </tr>
                <tr>
                    <th>Surface</th>
                    <td>{{ property.surface }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ property.city }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ property.address }}</td>
                </tr>
                <tr>
                    <th>Zipcode</th>
                    <td>{{ property.zipcode }}</td>
                </tr>
                <tr>
                    <th>Room</th>
                    <td>{{ property.Room }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ property.category.name }}</td>
                </tr>
                <tr>
                    <th>Payment</th>
                    <td>{{ property.payment.name }}</td>
                </tr>

                </tbody>
            </table>
        </div>
        <h4 class="text-3xl mb-4">Photos :</h4>
        {% if property.pictures %}
            <div class="grid grid-cols-4 gap-4 mb-8">
                {% for picture in property.pictures %}
                    <div>
                        <img src="{{ asset('uploads/property/' ~ picture.url) }}" alt="test" class="w-40 h-40">
                        {{ include('admin/picture/_delete_form.html.twig') }}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-xl mb-8">Aucune photo</p>
        {% endif %}
        <div class="flex flex-row justify-center items-center">
            <a href="{{ path('app_property_admin_index') }}"
               class="text-white bg-main font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Retour</a>

            <a href="{{ path('app_property_admin_edit', {'id': property.id}) }}"
               class="text-white bg-valid font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Edit</a>

            {{ include('admin/property_admin/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
