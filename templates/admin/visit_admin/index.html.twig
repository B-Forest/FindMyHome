{% extends 'admin/base.html.twig' %}

{% block title %}Visit index{% endblock %}

{% block body %}
    <section>
    <h2>Liste des visites</h2>
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-8">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Bien
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Date de visite
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Show</span>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Edit</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for visit in visits %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ visit.property.name }}
                    </th>
                    <td class="px-6 py-4">
                        <time datetime="{{ visit.dateStart|date('Y-m-d h:i') }}">
                            {{ visit.dateStart|date('l jS F') }}
                        </time>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('app_visit_admin_edit', {'id': visit.id}) }}" class="font-medium text-green-600 dark:text-green-500 hover:underline">Edit</a>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('app_visit_admin_show', {'id': visit.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Show</a>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucune visites trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <a href="{{ path('app_visit_admin_new') }}" class="text-white bg-valid font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Nouveau</a>
    <a href="{{ path('admin_dashboard') }}" class="text-white bg-main font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Retour</a>
    </section>
{% endblock %}
