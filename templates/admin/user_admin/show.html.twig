{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <section>
        <h2>Utilisateur</h2>

        <table class="table mb-8">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>ProfilePicture</th>
                <td>
                    <img src="{{ asset('uploads/pp/' ~ user.profilePicture) }}" alt="Photo de profile"
                         class="rounded-full w-24 h-24 inline-grid">
                </td>
            </tr>
            </tbody>
        </table>
        <div class="flex flex-row">
            <a href="{{ path('app_user_admin_index') }}"
               class="text-white bg-main font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Retour</a>

            <a href="{{ path('app_user_admin_edit', {'id': user.id}) }}"
               class="text-white bg-valid font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Edit</a>

            {{ include('admin/user_admin/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
