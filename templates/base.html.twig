<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}FindMyHome{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header class="px-8 lg:px-36 pr-8 relative z-20 sticky top-0 bg-gray-100">
    <nav class="flex flex-row i justify-between">
        <div class="relative z-20 flex items-center">
            <a href="{{ path('homepage') }}" class="py-8 pr-8">
                <h3 class="font-fasthand text-main">FMH</h3>
            </a>
        </div>
        <div class="flex items-center justify-end ">
            <input type="checkbox" name="hamburger" id="hamburger" class="peer hidden">
            <label for="hamburger"
                   class="peer-checked:hamburger block relative z-20 p-6 -mr-6 cursor-pointer lg:hidden">
                <div aria-hidden="true"
                     class="m-auto h-0.5 w-6 rounded bg-sky-900 transition duration-300"></div>
                <div aria-hidden="true"
                     class="m-auto mt-2 h-0.5 w-6 rounded bg-sky-900 transition duration-300"></div>
            </label>

            <div class="peer-checked:translate-x-0 fixed inset-0 w-[calc(100%-4.5rem)] translate-x-[-100%] bg-gray-100 border-r shadow-xl transition duration-300 lg:border-r-0 lg:w-auto lg:static lg:shadow-none lg:translate-x-0">
                <div class="flex flex-col h-full justify-between lg:items-center lg:flex-row">
                    <ul class="text-gray-700 space-y-8  lg:space-y-0 lg:flex lg:pt-0">
                        <li class="px-8 font-normal text-lg text-center">
                            <a href="{{ path('property_list') }}"
                               class="block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Propriétés</a>
                        </li>
                        <li class="px-8 font-normal text-lg text-center">
                            <a href="{{ path('property_location') }}"
                               class="block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Location</a>
                        </li>
                        <li class="px-8 font-normal text-lg text-center">
                            <a href="{{ path('property_achat') }}"
                               class="block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Vente</a>
                        </li>
                        {% if app.user %}
                            <li class="px-8 font-normal text-lg text-center">
                                <a href="{{ path('profile', {'id': app.user.id} ) }}"
                                   class="capitalize text-blue-500 block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-red-400 md:p-0">{{ app.user.fullName }}</a>
                            </li>
                            <li class="px-8 font-normal text-lg text-center">
                                <a href="{{ path('app_logout') }}"
                                   class="text-blue-500 block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-red-400 md:p-0">Logout</a>
                            </li>
                        {% else %}
                            <li class="px-8 font-normal text-lg text-center">
                                <a href="{{ path('app_login') }}"
                                   class="text-blue-500 block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-red-400 md:p-0">Connexion</a>
                            </li>
                            <li class="px-8 font-normal text-lg text-center">
                                <a href="{{ path('app_register') }}"
                                   class="text-blue-500 block py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-red-400 md:p-0">Inscription</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<main>
    {% block body %}{% endblock %}
</main>
<footer>
    <div class="bg-gray-100 grid grid-cols-3">
        <div class="col-start-2 mx-auto py-12 px-4 overflow-hidden sm:px-6 lg:px-8">
            <nav class="-mx-5 -my-2 flex flex-wrap justify-center" aria-label="Footer">
                <div class="px-5 py-2">
                    <a href="{{ path('homepage') }}" class="text-base text-gray-500 hover:text-gray-900">
                        Home
                    </a>
                </div>

                <div class="px-5 py-2">
                    <a href="{{ path('property_list') }}" class="text-base text-gray-500 hover:text-gray-900">
                        Propriétés
                    </a>
                </div>

                <div class="px-5 py-2">
                    <a href="{{ path('property_location') }}" class="text-base text-gray-500 hover:text-gray-900">
                        Location
                    </a>
                </div>

                <div class="px-5 py-2">
                    <a href="{{ path('property_achat') }}" class="text-base text-gray-500 hover:text-gray-900">
                        Vente
                    </a>
                </div>

                <div class="px-5 py-2">
                    <a href="{{ path('about') }}" class="text-base text-gray-500 hover:text-gray-900">
                        About
                    </a>
                </div>
            </nav>
        </div>
    <div class="flex flex-col justify-center items-center">
        <p class="text-center text-gray-500 text-xs">
            FindMyHome &copy; 2023.
        </p>
        <p class="text-gray-500 text-xs">
            All rights reserved Benjamin Forest.
        </p>
    </div>
    </div>
</footer>
</body>
</html>
