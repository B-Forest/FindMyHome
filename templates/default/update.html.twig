{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <section>

        <div class="flex flex-col justify-center items-center">
            <h2>Mettre a jour votre profil</h2>
        {{ form_start(form) }}
        {{ form_row(form.email, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5','placeholder':'john.doe@gmail.com'}, 'label': 'Votre email'}) }}
        {{ form_row(form.plainPassword, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5','placeholder':'password'}, 'label': 'Ton mot de passe'}) }}
        {{ form_row(form.lastName, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5','placeholder':'Doe'}, 'label': 'Ton nom'}) }}
        {{ form_row(form.firstName, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5','placeholder':'John'}, 'label': 'Ton prénom'}) }}
        {{ form_row(form.phoneNumber, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5','placeholder':'0600000000'}, 'label': 'Ton numéro de téléphone'}) }}
        {{ form_row(form.profilePicture, {'attr' : {'class': 'w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'}, 'label': 'Ta photo de profile'}) }}
        <div class="flex justify-center items-center">
            <button type="submit" class="bg-valid font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Mettre a jour</button>
        </div>
        {{ form_end(form) }}
            <a href="{{ path('profile', {'id': app.user.id} ) }}" class="text-white bg-main font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Retour a votre profil</a>
        </div>
    </section>
{% endblock %}
