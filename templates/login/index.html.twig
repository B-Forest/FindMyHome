{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <h2 class="text-center">Connexion</h2>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="mx-12">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" placeholder="Email" value="{{ last_username }}"
                       class="mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'">
            </div>
            <div class="mx-12">
                <label for="password">Mot de Passe:</label>
                <input type="password" id="password" name="_password" placeholder="Mot de Passe"
                       class="mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'">
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="flex items-center justify-center">
                <button type="submit"
                        class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700">
                    Se Connecter
                </button>
            </div>
        </form>
    </section>
{% endblock %}
