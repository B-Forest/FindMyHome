{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-8 md:py-20">
        <h2 class="text-center">Connexion</h2>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="mx-12 flex flex-col justify-center items-center">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" placeholder="Email" value="{{ last_username }}"
                       class="w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'">
            </div>
            <div class="mx-12 flex flex-col justify-center items-center">
                <label for="password">Mot de Passe:</label>
                <input type="password" id="password" name="_password" placeholder="Mot de Passe"
                       class="w-80 mb-4 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5'">
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="flex items-center justify-center">
                <button type="submit"
                        class="bg-valid font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                    Se Connecter
                </button>
            </div>
        </form>
        <div class="flex flex-col justify-center items-center">
            <div>
                <a href="{{ path('app_register') }}">Pas encore de compte ?</a>
            </div>
            <div>
                <a href="#">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </section>
{% endblock %}
