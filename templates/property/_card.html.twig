<article>

    {% if property.pictures|length > 0 %}
        <img src="{{ asset(property_url ~ '/' ~ property.pictures[0].url) }}" alt="picture" width="100" height="100" class="flex items-center justify-center">
        {% else %}
        <img src="{{ asset('uploads/property/placeholder.jpg') }}" alt="picture" width="200" height="100" class="text-center">
    {% endif %}

    <h3 class="text-center">{{ property.name }}</h3>
    <p class="text-center">{{ property.price }} €</p>
    <p class="text-center">{{ property.surface }} m²</p>
    <p class="text-center">{{ property.city }}</p>
</article>