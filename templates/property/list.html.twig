{% extends 'base.html.twig' %}

{% block title %}Property List{% endblock %}

{% block body %}
<section>
<h2>Liste des biens immobiliers</h2>
    {{ form_start(filterForm, {'action': path('property_list')}) }}
    {{ form_widget(filterForm) }}
    <button type="submit" class="btn btn-primary">Rechercher</button>
    {{ form_end(filterForm) }}
<div class="flex flex-col justify-center items-center md:grid md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8">
    {% if properties %}
    {% for property in properties %}
        {% include 'property/_card.html.twig' %}
    {% endfor %}
    {% else %}
        <div class="alert alert-warning">Aucun bien ne correspond Ã  votre recherche</div>
    {% endif %}
</div>
</section>

{% endblock %}