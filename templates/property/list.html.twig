{% extends 'base.html.twig' %}

{% block title %}Property List{% endblock %}

{% block body %}
<section>
<h2>Liste des biens immobiliers</h2>
    <div class="flex flex-col items-center justify-center mb-8">
        <h4 class="mb-2 text-xl">Filtrer les biens</h4>
        {% include 'property/_filter.html.twig' %}
    </div>
    {% if properties %}
        <div class="flex flex-col justify-center items-center md:grid md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8">
    {% for property in properties %}
        {% include 'property/_card.html.twig' %}
    {% endfor %}
        </div>
    {% else %}
        <div class="flex justify-center items-center mt-12">
            <h3>Aucun bien ne correspond Ã  votre recherche</h3>
        </div>
    {% endif %}
</section>

{% endblock %}