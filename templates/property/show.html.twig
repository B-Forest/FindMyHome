{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <section>
        <div class="flex justify-between my-8">
            <h2>{{ property.name }}</h2>
            {% if app.user and app.user.id != property.owner.id %}
                    <div class="flex justify-center items-center bg-gray-100 rounded-full h-14 w-14">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                        </svg>
                    </div>
                {% else %}
                    <div class="flex justify-center items-center bg-gray-100 rounded-full h-14 w-14">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                        </svg>

                    </div>
            {% endif %}
        </div>
        <div class="grid grid-cols-4 mb-12">
            {% if property.pictures|length > 0 %}
                <div id="carrousel" class="col-span-3">
                    <div id="container" class="flex items-center justify-center">
                        {% for picture in property.pictures %}
                            <img src="{{ asset(property_url ~ '/' ~ picture.url) }}" alt="picture"
                                 class="hidden w-full h-[400px]">
                        {% endfor %}
                    </div>
                    <img src="{{ asset('picture/icons8-flèche-droite-90.png') }}" alt="Prev" class="bouton" id="prev">
                    <img src="{{ asset('picture/icons8-flèche-droite-90.png') }}" alt="Next" class="bouton" id="next">
                </div>
            {% else %}
                <div id="carrousel" class="col-span-3">
                    <div id="container" class="flex items-center justify-center">
                        <img src="{{ asset('uploads/property/nopicture.jpg') }}" alt="picture"
                             class="hidden w-[250] h-[250]">
                    </div>
                </div>
            {% endif %}
            <div class="ml-16">
                <h3>Superficie :</h3>
                <p>{{ property.surface }} m²</p>
                <h3>Prix :</h3>
                <p>{{ property.price }} €</p>
                <h3>Mode de payement :</h3>
                <p>{{ property.payment.name }}</p>
            </div>
        </div>
        <div class="mb-8">
            <div class="mb-6">
                <h3>Description :</h3>
                <p>{{ property.description }}</p>
            </div>
            <div class="mb-6">
                <h3>Adresse :</h3>
                <p>{{ property.halfAddress }}</p>
            </div>
        </div>
        {% if property.visits|length > 0 %}
            <div class="mb-8">
                <h3>Futur Visites :</h3>
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Début de la visite
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Fin de la visite
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Visiteur ?
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for visit in property.visits %}
                            <tr class="bg-white border-b">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                    <time datetime="{{ visit.dateStart|date('Y-m-d h:i') }}">
                                        {{ visit.dateStart|date('l jS \\o\\f F  \\a\\t g:i a') }}
                                    </time>
                                </th>
                                <td class="px-6 py-4">
                                    <time datetime="{{ visit.dateEnd|date('Y-m-d h:i') }}">
                                        {{ visit.dateEnd|date('l jS \\o\\f F  \\a\\t g:i a') }}
                                    </time>
                                </td>
                                <td>
                                    {% if visit.visitor %}
                                        <p>Il y a deja un visiteur</p>
                                    {% else %}
                                        <a href="{{ path('app_visit_inscription',{'id' : visit.id}) }}"> Il n'y pas pas
                                            de visisteur inscrivez vous !</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        {% endif %}
        <div class="mb-8">
            <h3>Propriétaire :</h3>
            <p>{{ property.owner.fullName }}</p>

        </div>
        <a href="{{ path('property_list') }}">
            <button type="button"
                    class="text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                Retour
            </button>
        </a>
    </section>
    {% block javascripts %}
        <script type="text/javascript">
            document.body.onload = function () {
                let container = document.getElementById('container');
                let prev = document.getElementById('prev');
                let next = document.getElementById('next');

                container.firstElementChild.classList.remove('hidden');

                function nextSlide() {
                    let img = container.querySelector('img:not(.hidden)');
                    img.classList.add('hidden');
                    if (img.nextElementSibling) {
                        img.nextElementSibling.classList.remove('hidden');
                    } else {
                        container.firstElementChild.classList.remove('hidden');
                    }
                }

                function prevSlide() {
                    let img = container.querySelector('img:not(.hidden)');
                    img.classList.add('hidden');
                    if (img.previousElementSibling) {
                        img.previousElementSibling.classList.remove('hidden');
                    } else {
                        container.lastElementChild.classList.remove('hidden');
                    }
                }

                const interval = setInterval(nextSlide, 5000);
                next.addEventListener('click', () => {
                    clearInterval(interval);
                    nextSlide();
                });
                prev.addEventListener('click', () => {
                    clearInterval(interval);
                    prevSlide();
                });
            }
        </script>
    {% endblock %}
{% endblock %}
